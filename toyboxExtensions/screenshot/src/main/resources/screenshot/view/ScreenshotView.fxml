<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>

<Group xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.swdc.toybox.extension.screenshot.views.ScreenshotController">
   <children>
      <Canvas id="canvas" height="200.0" onMouseDragged="#onMouseMove" onMousePressed="#onMouseDown" onMouseReleased="#onMouseRelease" width="200.0" />
      <HBox id="toolBar" alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="422.0" spacing="8.0" styleClass="screenshot-toolbar">
         <padding>
            <Insets left="8.0" right="8.0" />
         </padding>
         <children>
            <ToggleButton id="text" minHeight="36.0" minWidth="36.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="36.0" text="ToggleButton" />
            <ToggleButton id="line" minHeight="36.0" minWidth="36.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="36.0" text="ToggleButton" />
            <ToggleButton id="rect" minHeight="36.0" minWidth="36.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="36.0" text="ToggleButton" />
            <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button id="save" minHeight="36.0" minWidth="36.0" mnemonicParsing="false" onAction="#saveImage" prefHeight="36.0" prefWidth="36.0" text="Button" />
         </children>
      </HBox>
   </children>
</Group>
